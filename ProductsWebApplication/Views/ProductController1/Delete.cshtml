 @model ProductsWebApplication.Models.ProductViewModel
@{
    ViewData["Title"] = "Delete";
}
<h2>@ViewData["Title"]</h2>
<hr></hr>
<form action="Delete" method="post">
    <div class="mb-3">
        <label class="form-label">Id</label>
        <input type="text" class="form-control" asp-for="Id" readonly></input>
    </div>
    <div class="mb-3">
        <label class="form-label">Name</label>
        <input type="text" class="form-control" asp-for="Name" readonly></input>

    </div>
    <div class="mb-3">
        <label class="form-label">Description</label>
        <input type="text" class="form-control" asp-for="Description" readonly></input>

    </div>
    <div class="mb-3">
        <label class="form-label">Price</label>
        <input type="text" class="form-control" asp-for="Price" readonly> </input>

    </div>
    <div class="d-grid">
        <button type="submit" class="btn btn-danger">Delete</button>
    </div>
</form>
